<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/imageview_applist_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            />

        <TextView
            android:id="@+id/txt_applist_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:text="@string/label_name"
            android:typeface="serif"
            android:layout_alignTop="@+id/imageview_applist_icon"
            android:layout_toEndOf="@+id/imageview_applist_icon"
            android:layout_marginStart="20dp" />

        <TextView
            android:text="@string/package_name"
            android:typeface="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_applist_packagename"
            android:layout_alignBottom="@+id/imageview_applist_icon"
            android:layout_alignStart="@+id/txt_applist_label" />
    </RelativeLayout>
</LinearLayout>
